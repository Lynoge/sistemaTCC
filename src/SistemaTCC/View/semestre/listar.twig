{% extends 'layout.twig' %}
{% block styles %}
  <link rel="stylesheet" href="./app/semestre/listar.css">
{% endblock %}
{% block content %}
	<div class="row">
		<div class="col-sm-6 col-xs-12">
			<h3>{{ titulo }}</h3>
		</div>		
		<div class="col-sm-6 col-xs-12">
			<a href="./semestre/cadastrar" class="btn btn-success btn-semestre-cadastrar"><span class="glyphicon glyphicon-plus"></span> Cadastrar semestre</a>
		</div>
	</div>
	
	<table class="table">
	</div>
        <thead>
            <tr>
              <th>Campus</th>
              <th>Ano</th>
              <th>Semestre</th>
              <th>Editar</th>
              <th>Excluir</th>
            </tr>
        </thead>
        <tbody id="lista-js">
            {% for semestre in semestres %}
            <tr>
                <td>{{ semestre.getPessoa().getNome() }}</td>
                <td>{{ semestre.getPessoa().getEmail() }}</td>
                <td>{{ semestre.getPessoa().getTelefone() }}</td>
                <td>
                    <a href="/semestre/editar/{{ semestre.getId() }}" class="btn btn-primary">
						<i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
						<span class="hidden-xs">Editar</span>
					</a>
                </td>
                <td>
                    <button data-id="{{ semestre.getId() }}" class="excluir btn btn-danger">
						<i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
						<span class="hidden-xs">Excluir</span>
					</button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
{% block scripts %}
<script src="./app/semestre/listar.js"></script>
{% endblock %}
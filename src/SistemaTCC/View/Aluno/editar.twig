{% extends "layout.twig" %}

{% block content %}
<h2>Editar aluno:</h2>

			<form action="" method="">

				<div class="row">
					<div class="col-md-5 col-md-offset-1">
						<div class="form-group">
							<label for="nome" class ="control-label">Nome completo</label>
							<input type="text" class="form-control " placeholder="Nome" name="nome" value="{{ aluno.getPessoa().getNome() }}">
						</div>
					</div>
					<div class="col-md-5">
						<div class="form-group">
							<label for="telefone" class ="control-label">Telefone</label>
							<input type="text" class="form-control" placeholder="Telefone" name="telefone" value="{{ aluno.getPessoa().getTelefone() }}">
						</div>
					</div>
				</div>

				<br>
				<div class="row">
					<div class="col-md-5 col-md-offset-1">
						<div class="form-group">
							<label for="cgu" class ="control-label">CGU</label>
							<input type="number" class="form-control" placeholder="CGU" name="cgu" value="{{ aluno.getCgu() }}">
						</div>
					</div>
					<div class="col-md-5">
						<div class="form-group">
							<label for="sexo" class ="control-label">Sexo</label>
							<select class="form-control" name="sexo">
								<option value="1" {{ aluno.getPessoa().getSexo() == 1 ? 'selected' : '' }}>Masculino</option>
								<option value="2" {{ aluno.getPessoa().getSexo() == 2 ? 'selected' : '' }}>Feminino</option>
							</select>
						</div>
					</div>
				</div>

				<br>
				<div class="row">
					<div class="col-md-5 col-md-offset-1">

							<label for="matricula" class ="control-label">Número de matrícula</label>
							<input type="number" class="form-control " placeholder="Nº matricula" name="matricula" value="{{ aluno.getMatricula() }}">
						</div>
					</div>
					<div class="col-md-5">
						<div class="form-group">
							<label for="email" class ="control-label">E-mail</label>
							<input type="email" class="form-control" placeholder="Email" name="email" value="{{ aluno.getPessoa().getEmail() }}">
						</div>
					</div>
				</div>


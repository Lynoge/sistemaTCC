{% extends 'layout.twig' %}
{% block content %}
    <h3>{{ titulo }}</h3>
    <form id="form-js">
        {% if id is defined %}
        <input type="hidden" name="id" value="{{ id }}" id="id" />
        {% endif %}
        <div class="row">
            <div class="col-xs-6">
                <div class="form-group">
                    <label class="control-label" for="titulo">Titulo</label>
                    <input type="text" class="form-control" name="titulo" id="titulo" value="{{ values.titulo }}" placeholder="Digite o tÃ­tulo...">
                    <span class="help-block"></span>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="form-group">
                    <label class="control-label" for="aluno">Aluno</label><br/>
                    <input type="text" class="form-control typeahead pessoas-js" name="aluno" id="aluno" placeholder="Digite o nome..." size="100%">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <div class="form-group">
                    <select class="form-control" id="semestre">
                        <option value="1" {{ values.semestre == 1 ? 'selected' : '' }}>Primeiro</option>
                        <option value="2" {{ values.semestre == 2 ? 'selected' : '' }}>Segundo</option>
                    </select>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-lg">Salvar</button>
    </form>

{% endblock %}
{% block scripts %}
    <script>
         var alunos = JSON.parse("{{listaAlunos}}".replace(/&quot;/g,'"'));
    </script>
    <script src="./app/shared/jquery-mask-plugin.js"></script>
    <script src="./app/tcc/formulario.js"></script>
    <script src="./lib/typeahead/typeahead.bundle.min.js"></script>
{% endblock %}

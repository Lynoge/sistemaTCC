{% extends 'layout.twig' %}

{% block content %}
<form action="./aluno/{{ aluno.getId() }}/" method="post">

	<p>
		Tem certeza que deseja excluir o aluno {{ aluno.getPessoa().getNome() }}?
	</p>

	<button type="submit">Excluir</button>

	<input type="hidden" name="_method" value="DELETE">
</form>
{% endblock %}
